{
    "env": {
        "browser": true,
        "es2018": true
    },
    "extends": "eslint:recommended",
    "ignorePatterns": [
        "js/socket.js",
        "js/countUp.js"
    ],
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "arrow-body-style": [
            "error",
            "always"
        ],
        "indent": [
            "warn",
            4
        ],
        "no-undef": "off",
        "no-extra-semi": "off",
        "semi": [
            "error",
            "always"
        ],
        "no-constant-condition": "off",
        "no-useless-escape": "off"
    }
}